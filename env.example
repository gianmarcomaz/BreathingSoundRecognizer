# ===============================================
# HackAudioFeature Environment Variables
# ===============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git!
# Command: cp env.example .env

# ===============================================
# Lava Payments (Usage-Based Billing)
# ===============================================
# Get your keys from: https://app.lavapayments.com
LAVA_SECRET_KEY=your_lava_secret_key_here
LAVA_CONNECTION_SECRET=your_connection_secret_here
LAVA_PRODUCT_SECRET=your_product_secret_here_optional

# ===============================================
# OpenAI (via Lava)
# ===============================================
OPENAI_MODEL=gpt-4o-mini

# ===============================================
# Arize Phoenix (AI Observability)
# ===============================================
# Get your key from: https://app.phoenix.arize.com
PHOENIX_API_KEY=your_phoenix_api_key_here
PHOENIX_COLLECTOR_ENDPOINT=https://app.phoenix.arize.com

# ===============================================
# LiveKit (Real-time Voice Chat)
# ===============================================
# Get your keys from: https://cloud.livekit.io
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
LIVEKIT_URL=wss://your-livekit-url.livekit.cloud

# ===============================================
# Vapi (AI Phone Calls)
# ===============================================
# Get your keys from: https://dashboard.vapi.ai
VAPI_SECRET_TOKEN=your_vapi_secret_token_here
VAPI_PUBLIC_KEY=your_vapi_public_key_here
VAPI_ASSISTANT_ID=your_vapi_assistant_id_here

# ===============================================
# Flask Configuration (Optional)
# ===============================================
FLASK_ENV=development
FLASK_DEBUG=True

